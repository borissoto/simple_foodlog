<div class="columns is-centered mt-6">  
    <div class="column is-half">
        <% @entries.each do |day, entries| %>
          <h3 class="is-size-4 has-text-weight-bold mb4 has-text-centered">Entries for
          <%= day %>
          </h3>

          <nav class="level is-mobile">
            <div class="level-item hast-text-centered">
                <div>
                <p class="heading">Calories</p>
                <p class="title"><%= entries.pluck(:calories).sum %></p>
                </div>
            </div>
             <div class="level-item hast-text-centered">
                <div>
                <p class="heading">Protein</p>
                <p class="title"><%= entries.pluck(:proteins).sum %>g</p>
                </div>
            </div>
             <div class="level-item hast-text-centered">
                <div>
                <p class="heading">Carobhydrates</p>
                <p class="title"><%= entries.pluck(:carbohydrates).sum %>g</p>
                </div>
            </div>
             <div class="level-item hast-text-centered">
                <div>
                <p class="heading">Fats</p>
                <p class="title"><%= entries.pluck(:fats).sum %>g</p>
                </div>
            </div>
          </nav>

          <% entries.each do |item| %>
            <%= link_to entry_path(item) do %>
                <div class="card">
                    <div class="card-content">
                        <strong><%= item.meal_type %></strong><br/>
                        <%= item.calories %> calories,
                        <%= item.proteins %>g protein,
                        <%= item.carbohydrates %>g carbs,
                        <%= item.fats %>g fat
                    </div>
                </div>
            <% end %>
          <% end %>
        <% end %>
    </div>
</div>
